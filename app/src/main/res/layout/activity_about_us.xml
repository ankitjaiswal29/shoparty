<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <!-- <data>

    </data>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.AboutUsActivity">

        <include
            android:id="@+id/info_tool"
            layout="@layout/toolbar_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ScrollView
            android:id="@+id/scrollMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_tool">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_Generalsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                 style="@style/AppTheme.Text_15_Bold_dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/general_site_usage"/>


                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/lightgray"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/AppTheme.Text_15_Bold_dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Generalsite"
                    android:text="@string/general_site_usage"/>


                <TextView
                    android:id="@+id/tv_LoremIspulLabel"
                    android:layout_width="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/AppTheme.Text_15_Bold_dp"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    android:text="Lorem Ipsum is simply: Sep 16 2021"/>



                <TextView
                    android:id="@+id/tv_LoremIspul"
                    android:layout_width="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/AppTheme.Text_13_graydp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_LoremIspulLabel"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only"/>



                <TextView
                    android:id="@+id/tv_Agreementlabel"
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/AppTheme.Text_15_Bold_dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_LoremIspul"
                    android:text="1. YOUR AGREEMENT"/>



                <TextView
                    android:id="@+id/tv_Agreement"
                    android:layout_width="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/AppTheme.Text_13_graydp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Agreementlabel"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only"/>




            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>