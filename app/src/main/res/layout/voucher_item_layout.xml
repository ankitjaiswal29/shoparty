<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivShape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_pink_voucher_curve_shape"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/ivShape"
        app:layout_constraintTop_toTopOf="@id/ivShape"
        app:layout_constraintBottom_toBottomOf="@id/ivShape"
        app:layout_constraintEnd_toEndOf="@+id/ivShape"
        android:text="54% OFF"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_MinimulPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivShape"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/AppTheme.Text_14dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:text="On Minimum Purchase Of $. 200"/>

    <View
        android:id="@+id/view_dotted"
        android:layout_width="0dp"
        android:layout_height="35dp"
       app:layout_constraintStart_toStartOf="@+id/tv_MinimulPurchase"
        app:layout_constraintTop_toBottomOf="@+id/tv_MinimulPurchase"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_vouchers_dotted_gray"/>
<TextView
    android:id="@+id/tv_Code"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Code:123WEFXTRA10"
    style="@style/AppTheme.Text_12dp"
 android:layout_marginLeft="5dp"
    app:layout_constraintStart_toStartOf="@+id/view_dotted"
    app:layout_constraintTop_toTopOf="@+id/view_dotted"
    app:layout_constraintBottom_toBottomOf="@+id/view_dotted"/>

    <TextView
        android:id="@+id/tv_Copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copy"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        style="@style/AppTheme.Text_pink_12ssp"
    app:layout_constraintEnd_toEndOf="@+id/view_dotted"
        app:layout_constraintTop_toTopOf="@+id/view_dotted"
        app:layout_constraintBottom_toBottomOf="@+id/view_dotted"/>

<View
    android:layout_width="1dp"
    android:layout_height="35dp"
    app:layout_constraintTop_toTopOf="@+id/view_dotted"
    app:layout_constraintBottom_toBottomOf="@id/view_dotted"
    android:orientation="vertical"
android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/cardview_dark_background"
    app:layout_constraintEnd_toStartOf="@+id/tv_Copy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_ic_icon_calender"
        app:layout_constraintStart_toStartOf="@+id/view_dotted"
        app:layout_constraintTop_toBottomOf="@+id/view_dotted"
        android:text="Expire On: 30 Sep, 2021, 11:45 PM"
        style="@style/AppTheme.Text_12dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="11dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>