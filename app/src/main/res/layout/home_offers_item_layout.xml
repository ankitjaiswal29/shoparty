<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:padding="1dp"
    android:background="@drawable/home_top_selling_items_bg">

    <ImageView
        android:id="@+id/home_offers_item_img"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/top_selling_item_img" />

    <ImageView
        android:id="@+id/home_offers_item_name_tv"
        android:layout_width="64dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/home_offers_item_img"
   app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/shoparty_icon" />

    <TextView
        android:id="@+id/home_offers_item_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
app:layout_constraintTop_toBottomOf="@+id/home_offers_item_name_tv"
        android:text="@string/up_to_10_off"
        app:layout_constraintStart_toStartOf="@+id/home_offers_item_name_tv"
        app:layout_constraintEnd_toEndOf="@+id/home_offers_item_name_tv"
        style="@style/AppTheme.Text_11_dp_pink"
        />
</androidx.constraintlayout.widget.ConstraintLayout>