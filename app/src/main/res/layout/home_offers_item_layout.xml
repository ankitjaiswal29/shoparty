<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/home_offer_bg">

    <ImageView
        android:id="@+id/home_offers_item_img"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/top_selling_item_img" />

    <ImageView
        android:id="@+id/home_offers_item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/home_offers_item_img"
        android:src="@drawable/shoparty_icon" />

    <TextView
        android:id="@+id/home_offers_item_price_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_offers_item_name_tv"
        android:text="@string/up_to_10_off"
        android:textAlignment="center"
        android:textColor="@color/color_pink"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>