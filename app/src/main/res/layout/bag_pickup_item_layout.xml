<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/background_rectangular_white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bag_pickup_item_img"
        android:layout_width="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="35dp"
        android:src="@drawable/person_img"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        style="@style/AppTheme.Text_14dp_Bold"
        app:layout_constraintStart_toEndOf="@+id/bag_pickup_item_img"
         android:text="@string/bend_the_trend"
        app:layout_constraintTop_toTopOf="@+id/bag_pickup_item_img"
        />
    <TextView
        android:id="@+id/tv_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
     app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/bag_pickup_item_img"
        android:text="@string/_45b_uhansjo_industry_alinfornia_uk"
        style="@style/AppTheme.Text_12_graydp_bold" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_subTitle"
        app:layout_constraintStart_toEndOf="@+id/bag_pickup_item_img"
        android:text="@string/_8km"
        style="@style/AppTheme.Text_14dp_Bold" />


    <RadioButton
        android:id="@+id/radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       android:buttonTint="@color/pink"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>