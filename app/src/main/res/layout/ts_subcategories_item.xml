<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@color/white"
    >

        <View
            android:id="@+id/v_circleview"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:background="@drawable/circle_border_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           />

        <ImageView
            android:id="@+id/ts_subcategories_item_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/icon_shippingbag"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="@+id/v_circleview"
            app:layout_constraintStart_toStartOf="@+id/v_circleview"
            app:layout_constraintTop_toTopOf="@+id/v_circleview" />

         <TextView
             android:id="@+id/ts_subcategories_item_name_tv"
             android:layout_width="@dimen/_70sdp"
             android:layout_height="wrap_content"
             android:text="@string/toys_kid"
             android:lines="2"
             android:gravity="center_horizontal"
             android:ellipsize="end"
             app:layout_constraintStart_toStartOf="@id/ts_subcategories_item_img"
             app:layout_constraintEnd_toEndOf="@id/ts_subcategories_item_img"
             app:layout_constraintTop_toBottomOf="@id/ts_subcategories_item_img"
           style="@style/AppTheme.Text_12dp_Bold" />
</androidx.constraintlayout.widget.ConstraintLayout>