<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8F8"
    tools:context=".view.fragment.NewArrivalItemDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/na_details_constrain_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:paddingBottom="20dp">
        <ImageView
            android:id="@+id/na_details_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            app:tint="@color/black"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:id="@+id/na_details_bag_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"/>
        <ImageView
            android:id="@+id/na_details_search_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/na_details_bag_btn"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/na_details_shoparty_icon"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:src="@drawable/shoparty_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/na_details_bag_btn"
            app:layout_constraintStart_toEndOf="@+id/na_details_back_btn"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/na_details_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/na_details_shoparty_icon"
            app:layout_constraintStart_toStartOf="@+id/na_details_shoparty_icon"
            app:layout_constraintEnd_toEndOf="@+id/na_details_shoparty_icon"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Tesla Toys"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/na_details_constrain_lay1"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/na_details_constrain_lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp">
                <FrameLayout
                    android:id="@+id/na_details_frame_lay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/na_details_image"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        android:src="@drawable/item_details_wish_icon"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/na_details_item_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_frame_lay1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:text="Toys Kids 6+ Bundle Color Pack"/>
                <ImageView
                    android:id="@+id/na_details_share_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_frame_lay1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/share_icon"
                    />
                <TextView
                    android:id="@+id/na_details_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10.7"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_item_name_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/color_pink"/>
                <TextView
                    android:id="@+id/na_details_prev_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$14.4"
                    app:layout_constraintStart_toEndOf="@+id/na_details_price_tv"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_item_name_tv"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/na_details_product_desc_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Description"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_price_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/na_details_item_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_product_desc_htv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document the visual form of a document"/>

                <TextView
                    android:id="@+id/na_details_read_more_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More"
                    android:textColor="@color/color_pink"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_item_desc_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/na_details_read_more_htv"
                    app:layout_constraintTop_toTopOf="@+id/na_details_read_more_htv"
                    app:layout_constraintStart_toEndOf="@+id/na_details_read_more_htv"
                    android:layout_marginStart="10dp"
                    app:tint="@color/color_pink"
                    />
                <TextView
                    android:id="@+id/na_details_choose_color_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Frame Color"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_read_more_htv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:id="@+id/na_details_Linear_lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_choose_color_htv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingStart="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ellipse_pink"
                        android:layout_margin="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ellipse_deep_blue"
                        android:layout_margin="8dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ellipse_blue"
                        android:layout_margin="8dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ellipse_red"
                        android:layout_margin="8dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/na_details_order_now_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Now: "
                    app:layout_constraintTop_toBottomOf="@+id/na_details_Linear_lay1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_pink"/>
                <TextView
                    android:id="@+id/na_details_order_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/na_details_order_now_htv"
                    app:layout_constraintBottom_toBottomOf="@+id/na_details_order_now_htv"
                    app:layout_constraintStart_toEndOf="@+id/na_details_order_now_htv"
                    android:text="And Get It By August 27"
                    />
                <LinearLayout
                    android:id="@+id/na_details_Linear_lay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_order_now_htv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/item_details_ship_to_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ship To: "
                        android:textColor="@color/color_pink"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dubai"
                        android:layout_marginStart="5dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_feather_chevron_down"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/na_details_customize_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_Linear_lay2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Customize it"
                    android:textAllCaps="false"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/customize_btn_bg"/>
                <LinearLayout
                    android:id="@+id/na_details_Linear_lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_customize_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginEnd="5dp"
                        android:text="Wishlist"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@drawable/item_details_add_wish_bg"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginStart="5dp"
                        android:text="Add to bag"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/customize_btn_bg"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/na_details_constrain_lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/na_details_constrain_lay2"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/na_details_ymal_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You may also like"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/na_details_you_may_like_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_ymal_htv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    tools:listitem="@layout/top_selling_item"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginTop="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/na_details_constrain_lay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/na_details_constrain_lay3"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/na_details_cab_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Also Bought"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/na_details_customer_also_bought_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/na_details_cab_htv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    tools:listitem="@layout/top_selling_item"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginTop="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>