<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        tools:context=".ui.main.deals.DealsFragment">
<View
    android:id="@+id/v_top"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/light_gray"/>

        <View
            android:id="@+id/v_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deals_linear_lay1"
            android:background="@color/light_gray"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/deals_linear_lay1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
               app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_top">

            <View
                android:id="@+id/v_center"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:elevation="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/light_gray"/>

            <TextView
                android:id="@+id/tv_filter"
                style="@style/AppTheme.Text_12_graydp"
                android:layout_width="0dp"
                android:layout_marginEnd="1dp"
                android:layout_height="wrap_content"
                android:background="@color/social_login_background"
                   android:drawableStart="@drawable/ic_filter_pink_icon"
                android:text="@string/filter"
                android:paddingStart="69dp"
                android:paddingEnd="69dp"
          android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@id/v_center"
               app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- <LinearLayout
                android:id="@+id/deals_sort_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_weight="0.5"
                android:layout_marginStart="2dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_icon_sort"/>-->

           <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="@+id/tv_sort"
                app:layout_constraintBottom_toBottomOf="@+id/tv_sort"
                app:layout_constraintStart_toStartOf="@+id/tv_sort"
                android:src="@drawable/ic_icon_sort" />
-->
            <TextView
                android:id="@+id/tv_sort"
                style="@style/AppTheme.Text_12_graydp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/social_login_background"
                android:text="@string/sort"
android:layout_marginStart="1dp"
                android:gravity="center"
                android:paddingStart="69dp"
                android:paddingEnd="69dp"
                app:layout_constraintStart_toEndOf="@id/v_center"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableStart="@drawable/ic_short_pink_icon"
                  app:layout_constraintTop_toTopOf="parent" />
            <!--  </LinearLayout>-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deals_item_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/top_selling_item2"
            app:spanCount="2"
            android:paddingBottom="40dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>