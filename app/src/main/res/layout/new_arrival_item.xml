<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/new_arrival_item_root"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/new_arrival_item_img"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/top_selling_item_img" />

        <TextView
            android:id="@+id/new_arrival_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_arrival_item_img"
            android:text="@string/toys_kid"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/new_arrival_item_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_arrival_item_name_tv"
            android:text="@string/_399_0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>