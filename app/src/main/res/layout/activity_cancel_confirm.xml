<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink">

        <ImageView
            android:layout_width="126dp"
            android:id="@+id/ivSuccesslogo"
            android:layout_height="126dp"
            android:src="@drawable/ic_cancel_confirm_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="253dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvOrdertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Text_23_white_bold_ssp"
            android:text="@string/cancellation_confirmed"
            android:layout_marginTop="65dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="31dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivSuccesslogo"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvViewordertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Text_14_white_ssp"
            android:text="@string/view_order"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOrdertitle"
            app:layout_constraintStart_toStartOf="parent" />




        <Button
            android:id="@+id/btnDone"
            style="@style/AppTheme.ButtonStyleWhite"
            android:text="@string/done"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrdertitle"
            android:layout_marginTop="156dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>