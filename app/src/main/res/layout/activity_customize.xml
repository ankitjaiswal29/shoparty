<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".view.activity.CustomizeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_constrain_lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:paddingBottom="20dp">
            <ImageView
                android:id="@+id/ct_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                app:tint="@color/black"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/ct_bag_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"/>
            <ImageView
                android:id="@+id/ct_search_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ct_bag_btn"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:id="@+id/ct_shoparty_icon"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:src="@drawable/shoparty_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ct_bag_btn"
                app:layout_constraintStart_toEndOf="@+id/ct_back_btn"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/ct_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ct_shoparty_icon"
                app:layout_constraintStart_toStartOf="@+id/ct_shoparty_icon"
                app:layout_constraintEnd_toEndOf="@+id/ct_shoparty_icon"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Customize It"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_constrain_lay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ct_constrain_lay1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/customize_image1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/customize_image1"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/customize_user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user_image_icon"
                app:layout_constraintTop_toBottomOf="@+id/customize_image1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"/>
            <TextView
                android:id="@+id/customize_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:background="#FF3232"
                app:layout_constraintStart_toEndOf="@+id/customize_user_icon"
                app:layout_constraintTop_toTopOf="@+id/customize_user_icon"
                app:layout_constraintBottom_toBottomOf="@+id/customize_user_icon"
                android:layout_marginStart="40dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/_16sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_constrain_lay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ct_constrain_lay2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/customize_edit_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit/Add You Images"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:id="@+id/customize_your_photo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/customize_btn_bg"
                android:text="Your Photo"
                android:paddingStart="10dp"
                android:textAllCaps="false"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/customize_edit_txt"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/customize_add_photo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/customize_btn_bg"
                android:text="Add Photo"
                android:paddingStart="10dp"
                android:textAllCaps="false"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/customize_edit_txt"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/customize_your_photo"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/customize_add_graphic"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/customize_btn_bg"
                android:text="Add Graphic"
                android:paddingStart="10dp"
                android:textAllCaps="false"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/customize_edit_txt"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/customize_add_photo"
                android:layout_marginTop="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_constrain_edit_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ct_constrain_lay3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/customize_xyz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XYZ               "
                android:drawableEnd="@drawable/ic_icon_material_arrow_drop_down"
                android:background="@drawable/customize_border1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/customize_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15    "
                android:drawableEnd="@drawable/ic_icon_material_arrow_drop_down"
                android:background="@drawable/customize_border1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/customize_xyz_tv"/>
            <LinearLayout
                android:id="@+id/customize_letter_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/customize_border1"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/customize_size_tv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/color_pink"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_material_arrow_drop_down"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/customize_xyz_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15    "
                android:drawableEnd="@drawable/ic_icon_material_arrow_drop_down"
                android:background="@drawable/customize_border1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/customize_xyz_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_constrain_lay4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ct_constrain_edit_lay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/customize_t_linear"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:background="@drawable/customize_border1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customize_gallery_linear"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/customize_t_linear"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:background="@drawable/customize_border1"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:src="@drawable/gallery_image_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image &amp; Background"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_constrain_lay5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ct_constrain_lay4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/customize_linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Preview"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/customize_btn_bg"
                    android:layout_marginEnd="5dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/customize_btn_bg"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/customize_approve_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/customize_btn_bg"
                android:text="Save"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/customize_linear1"
                android:layout_marginTop="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>