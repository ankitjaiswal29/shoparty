<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/screen_background_dark_transparent">

        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/bg_white_stroke_accent"
            android:contentDescription="@null"
            android:maxHeight="@dimen/_250sdp"
            android:minHeight="@dimen/_200sdp"
            android:padding="@dimen/_2sdp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:elevation="20dp"
            android:src="@drawable/ic_close_icon"
            app:layout_constraintEnd_toEndOf="@id/imgBanner"
            app:layout_constraintTop_toTopOf="@id/imgBanner"
            app:layout_constraintStart_toEndOf="@id/imgBanner"
            app:layout_constraintBottom_toTopOf="@id/imgBanner"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>