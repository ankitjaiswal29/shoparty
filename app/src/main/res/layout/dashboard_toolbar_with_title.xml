<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/nav_drawer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_drawer_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/nav_drawer_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/princess_dress"
        style="@style/AppTheme.Text_15_Bold_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nav_drawer_btn" />

    <ImageView
        android:id="@+id/iv_bag_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_btnsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:src="@drawable/ic_search_icon_dashbord"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bag_btn"
        app:layout_constraintEnd_toStartOf="@+id/iv_bag_btn"
        app:layout_constraintTop_toTopOf="@id/iv_bag_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>