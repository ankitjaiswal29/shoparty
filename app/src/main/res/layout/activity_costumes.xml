                            android:textSize="15dp" />

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:padding="8dp"
                            android:src="@drawable/right_arrow_icon" />
                    </RelativeLayout>
                    <RelativeLayout
