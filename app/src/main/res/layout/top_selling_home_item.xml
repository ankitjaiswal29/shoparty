<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="104dp"
    android:layout_height="165dp"
    android:id="@+id/top_selling_home_item_root"
    android:layout_marginRight="11dp"
    android:background="@drawable/home_top_selling_items_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
         <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/person_img"
            app:layout_constraintEnd_toEndOf="parent"/>







    <RelativeLayout
        android:id="@+id/relative_like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_favourite_gray"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp">


        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_icon_fav_pink" />


        <ImageView
            android:id="@+id/iv_unselect"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:elevation="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_icon_fav_gray" />




    </RelativeLayout>







    <TextView
        android:id="@+id/tv_princesdresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/princess_dress"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="@dimen/_5sdp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/AppTheme.Text_12_graydp_bold"/>

    <TextView
        android:id="@+id/tv_dressprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_10_02"
        app:layout_constraintTop_toBottomOf="@+id/tv_princesdresses"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        style="@style/AppTheme.Text_12dp_Bold"/>



    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_favourite_gray"
        android:layout_margin="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>