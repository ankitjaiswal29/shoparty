<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bag_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/top_selling_item_img"
        />
    <TextView
        android:id="@+id/bag_item_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Tesla Toys Kids 6+ Bundle Color Pack"
        app:layout_constraintStart_toEndOf="@+id/bag_item_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/bag_item_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$7.10"
        android:textStyle="bold"
        android:textColor="@color/color_pink"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/bag_item_name"
        app:layout_constraintStart_toEndOf="@+id/bag_item_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/bag_item_no_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12.8"
        app:layout_constraintStart_toEndOf="@+id/bag_item_price_tv"
        app:layout_constraintTop_toTopOf="@+id/bag_item_price_tv"
        app:layout_constraintBottom_toBottomOf="@+id/bag_item_price_tv"
        android:layout_marginStart="5dp"
        android:textSize="13dp"/>
    <ImageView
        android:id="@+id/bag_item_clear_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_clear_24"
        android:layout_margin="7dp"/>
    <ImageView
        android:id="@+id/bag_item_add_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/plus_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bag_item_no_price_tv"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:id="@+id/bag_item_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/bag_item_add_btn"
        app:layout_constraintTop_toTopOf="@+id/bag_item_add_btn"
        app:layout_constraintBottom_toBottomOf="@+id/bag_item_add_btn"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/minus_icon"
        app:layout_constraintTop_toTopOf="@+id/bag_item_add_btn"
        app:layout_constraintBottom_toBottomOf="@+id/bag_item_add_btn"
        app:layout_constraintEnd_toStartOf="@+id/bag_item_count_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>